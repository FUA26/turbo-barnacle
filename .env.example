# Database (for Prisma)
# Update these values based on your PostgreSQL configuration
DATABASE_URL="postgresql://username:password@localhost:5432/database_name?pgbouncer=true"
DIRECT_URL="postgresql://username:password@localhost:5432/database_name"

# NextAuth
# Generate a secure secret with: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-key-change-in-production"
NEXTAUTH_URL="http://localhost:3000"

# App Configuration
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="Naiera"

# Email Service (Resend)
# Get your API key from https://resend.com/api-keys
# For development: use onboarding@resend.dev
# For production: verify your domain at https://resend.com/domains first
RESEND_API_KEY="your-resend-api-key"
EMAIL_FROM="Your App Name <onboarding@resend.dev>"

# MinIO Object Storage
# Start MinIO with: docker-compose up -d minio
# Access MinIO Console at: http://localhost:9001
MINIO_ENDPOINT="localhost"
MINIO_PORT="9000"
MINIO_ACCESS_KEY="minioadmin"
MINIO_SECRET_KEY="minioadmin"
MINIO_USE_SSL="false"
MINIO_BUCKET="naiera-uploads"

# File Upload Limits
MAX_FILE_SIZE_MB="50"
MAX_AVATAR_SIZE_MB="5"

# Allowed File Types
ALLOWED_IMAGE_TYPES="image/jpeg,image/png,image/webp,image/gif"
ALLOWED_DOCUMENT_TYPES="application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document"
ALLOWED_VIDEO_TYPES="video/mp4,video/webm"

# File Cleanup
TEMP_FILE_RETENTION_HOURS="24"
ORPHAN_FILE_CLEANUP_DAYS="7"

# CDN (Optional)
CDN_ENABLED="false"
CDN_DOMAIN=""
